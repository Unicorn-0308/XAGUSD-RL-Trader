# =============================================================================
# XAGUSD RL Trader - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# -----------------------------------------------------------------------------
# Match-Trader API Credentials
# -----------------------------------------------------------------------------
# Get these from your Match-Trader broker
MATCH_TRADER_API_URL=https://api.match-trader.com
MATCH_TRADER_API_KEY=your_api_key_here
MATCH_TRADER_API_SECRET=your_api_secret_here
MATCH_TRADER_ACCOUNT_ID=your_account_id_here

# Demo or Live mode
MATCH_TRADER_DEMO_MODE=true

# -----------------------------------------------------------------------------
# Trading Settings
# -----------------------------------------------------------------------------
TRADING_SYMBOL=XAGUSD
TRADING_TIMEFRAME=1m
TRADING_LOT_SIZE=0.3
TRADING_STOP_LOSS_USD=300
TRADING_TAKE_PROFIT_USD=500
TRADING_MAX_LOSS_USD=1000

# -----------------------------------------------------------------------------
# Model Settings
# -----------------------------------------------------------------------------
MODEL_SEQUENCE_LENGTH=120
MODEL_HIDDEN_SIZE=256
MODEL_NUM_LAYERS=2
MODEL_ATTENTION_HEADS=4
MODEL_DROPOUT=0.1

# -----------------------------------------------------------------------------
# Training Settings
# -----------------------------------------------------------------------------
TRAINING_BATCH_SIZE=64
TRAINING_LEARNING_RATE=0.0003
TRAINING_GAMMA=0.99
TRAINING_GAE_LAMBDA=0.95
TRAINING_CLIP_EPSILON=0.2
TRAINING_ENTROPY_COEF=0.01
TRAINING_VALUE_COEF=0.5
TRAINING_PREDICTION_COEF=0.1
TRAINING_MAX_GRAD_NORM=0.5
TRAINING_NUM_EPOCHS=10
TRAINING_CHECKPOINT_INTERVAL_MINUTES=360

# -----------------------------------------------------------------------------
# Paths
# -----------------------------------------------------------------------------
DATA_DIR=./data
CHECKPOINT_DIR=./checkpoints
LOG_DIR=./logs
TENSORBOARD_DIR=./logs/tensorboard
TRADE_LOG_DIR=./logs/trades

# -----------------------------------------------------------------------------
# Device Settings
# -----------------------------------------------------------------------------
# Options: auto, cuda, cpu
DEVICE=auto

